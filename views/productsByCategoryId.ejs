<div class="container">
    <div class="row mb-5">

        <% for(product of products){ %>
                <div class="col-6">
                    <div class="card border-0">
                        <div class="card-body">
                            <p class=" card-title"><h5 class=""><%= product.name %></h5></p>
                            <div class="row">
                                <div class="col-4">
                                    <img class="card-img-bottom w-100 h-100" src="../../../../../images/<%= product.image_groups.filter(obj => obj.view_type === 'small')[0].images[0].link %>" alt="<%= product.image_groups.filter(obj => obj.view_type === 'small')[0].images[0].alt %>">
                                </div>
                                <div class="col-8">
                                    <p class="card-text"><%= product.short_description %></p>
                                    <div class="row">
                                        <div class="col-8">
                                            <p class="card-text">Price: $ <%= product.price.toFixed(2) %></p>
                                        </div>
                                        <div>
                                            <form action="/category/<%= selectedCategory.id %>/subcategory/<%= selectedSubCategory.id %>/product/<%= product._id %>" method="GET">
                                                <button type="submit" class="btn btn-outline-danger btn-sm h-100" style="border-radius: 12px;">More Info</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        <% } %>
    </div>
    

    <% if (pages > 0) { %>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <% if (current == 1) { %>
                    <li class="page-item disabled"><a class="page-link">First</a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/category/<%= selectedCategory.id %>/subcategory/<%= currentCategoryId %>/products/1">First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="page-item active"><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/category/<%= selectedCategory.id %>/subcategory/<%= currentCategoryId %>/products/<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="page-item disabled"><a class="page-link">Last</a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/category/<%= selectedCategory.id %>/subcategory/<%= currentCategoryId %>/products/<%= pages %>">Last</a></li>
                <% } %>
            </ul>
        </nav>
    <% } %>

</div>