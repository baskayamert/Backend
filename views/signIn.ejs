<!-- SignInFormModal -->
<div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="signin form" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="col pl-5" >
            <h5 class="modal-title text-center" id="exampleModalLabel">Login</h5>
          </div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body mx-4">
          <!-- SignInForm -->
          <form action="/users/signin" method="POST">
            <div class="form-group">
              <label class="sr-only" for="email">Email address</label>
              <input type="email" class="form-control" name="email" placeholder="email" required="required">
            </div>
            <div class="form-group">
              <label class="sr-only" for="password">Password</label>
              <input type="password" class="form-control" name="password" placeholder="password" required="required">
            </div>
            <div class="my-3">
              <button type="submit" class="btn btn-success btn-lg my-3" style="width: 420px;" data-toggle="modal" data-target="#signin">Login</button>
              <% if(sessionFlash) { %>
                <div class="<%= sessionFlash.type %>" role="alert">
                  <%= sessionFlash.message %>
                </div>
              <% } %>
              <small id="signUpHelp" class="form-text text-muted text-center" >Not registered? <a style="color: green; cursor:pointer;" data-dismiss="modal" data-toggle="modal" data-target="#signup">Create an account</a></small>
            </div>
            
          </form>
          <!-- /SignInForm -->
        </div>
      </div>
    </div>
  </div>
<!-- /SignInFormModal -->